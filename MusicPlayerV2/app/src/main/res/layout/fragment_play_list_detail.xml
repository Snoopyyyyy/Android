<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.music_playlist.playListDetail">

    <ImageView
        android:id="@+id/fragment_playlist_detail_icon"
        android:background="@color/light_light_purple"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:layout_marginTop="408dp"
        android:src="@drawable/ic_baseline_library_music_24"
        app:layout_constraintStart_toEndOf="@+id/fragment_playlist_detail_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_playlist_detail_name"
        android:layout_width="0dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_playlist_detail_icon"
        app:layout_constraintEnd_toStartOf="@+id/fragment_playlist_detail_edit"
        app:layout_constraintStart_toEndOf="@+id/fragment_playlist_detail_icon"
        app:layout_constraintTop_toTopOf="@+id/fragment_playlist_detail_icon" />

    <ImageButton
        android:id="@+id/fragment_playlist_detail_shuffle"
        android:layout_width="0dp"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:layout_height="40dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shuffle_button"
        android:src="@drawable/ic_baseline_shuffle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_playlist_detail_icon" />

    <ImageButton
        android:id="@+id/fragment_playlist_detail_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:background="@drawable/rounded_bouton"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/fragment_playlist_detail_edit"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:background="@drawable/rounded_bouton"
        android:layout_margin="5dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/fragment_playlist_detail_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_playlist_detail_shuffle"
        app:layout_constraintVertical_bias="0.2" />

</androidx.constraintlayout.widget.ConstraintLayout>